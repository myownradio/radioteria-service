html
    h1 Registration 2
    form(action="/signup", method="post")
        div= util.eval("${#fields}")
        input(type="text", placeholder="email", name="email", value=signUpForm.email)
        input(type="password", placeholder="password", name="password", value=signUpForm.password)
        input(type="text", placeholder="name", name="name", value=signUpForm.name)
        input(type="hidden", name=_csrf.parameterName, value=_csrf.token)
        input(type="submit", value="sign up")
